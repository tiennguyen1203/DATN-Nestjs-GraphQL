{
  "name": "datn-nestjs-graphql",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/db/main-db/ormconfig.ts",
    "migration:create": "yarn typeorm migration:create -d src/db/main-db/migrations -n",
    "migration:run": "yarn typeorm -d src/db/main-db/migrations -- migration:run",
    "migration:revert": "ts-node src/db/runMigrations.ts revert",
    "migration:seed": "ts-node src/db/seeds/scripts/initDataCountries.ts"
  },
  "dependencies": {
    "@nestjs-query/query-graphql": "^0.28.1",
    "@nestjs-query/query-typeorm": "^0.28.1",
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^7.5.1",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/typeorm": "^8.0.2",
    "@types/ioredis": "^4.26.7",
    "apollo-server-express": "^2",
    "aws-sdk": "^2.966.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dataloader": "^2.0.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "graphql-subscriptions": "^1.2.1",
    "ioredis": "^4.27.7",
    "jwks-rsa": "^2.0.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7",
    "typeorm": "^0.2.37",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^16.6.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unused-imports": "^1.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.3.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
